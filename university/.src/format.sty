\PassOptionsToPackage{svgnames}{xcolor}

% LANG (GER)
\RequirePackage[utf8]{inputenc}
\RequirePackage[ngerman]{babel}
\RequirePackage{hyphenat}
\RequirePackage{csquotes}
\MakeOuterQuote{"}

% DIMENSIONS
\RequirePackage[a4paper, margin= 2.5cm, bottom= 1.75cm]{geometry}
\RequirePackage{changepage}

% TEXT
\setlength{\parindent}{0pt}
\setlength{\parskip}{6pt}
\linespread{1.25}

% FONT
\RequirePackage{sansmath}
\sansmath
\RequirePackage{fontspec}
\setsansfont{MerriweatherSans}[
    Path= ../../.assets/MerriweatherSans/,
    Scale= 0.9,
    Extension= .ttf,
    UprightFont= *-Light,
    BoldFont= *-Medium,
    ItalicFont= *-LightItalic,
    BoldItalicFont= *-MediumItalic
]
\setmonofont{JetBrainsMono}[
    Path= ../../.assets/JetBrainsMono/,
    Scale= 0.85,
    Extension= .ttf,
    UprightFont= *-Regular,
    BoldFont= *-Bold,
    ItalicFont= *-Italic,
    BoldItalicFont= *-BoldItalic,
    Ligatures= TeX
]

\renewcommand{\familydefault}{\sfdefault}

% HEADER / FOOTER
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
\RequirePackage{lastpage}

\fancyhead[L]{\sffamily \coursenumber{ }\bfseries\courseshort}
\fancyhead[R]{\scshape \coursetype{ }\coursetypespecific{ }\theexercisenumber}
\fancyfoot[C]{\sffamily \thepage\hspace{1pt} / \hspace{1pt}\pageref*{LastPage}}

\setlength{\headsep}{12pt}

% FORMATTING
\RequirePackage[shortlabels]{enumitem}
\RequirePackage[table, dvipsnames]{xcolor}
\RequirePackage{color}
\RequirePackage{wrapfig}
\RequirePackage{subcaption}
\RequirePackage{etoolbox}
\RequirePackage{multicol}
\RequirePackage{ulem}
\RequirePackage[hidelinks, colorlinks= true, pdfborder= {0 0 0}, linkcolor= Maroon]{hyperref}
